

  <h2>Write A Blog</h2>

  <form action="/write" method="POST">
    <input
      type="text"
      name="title"
      class="form-control mb-3"
      placeholder="Title"
      required
    />

    <textarea
      name="content"
      class="form-control mb-3"
      rows="8"
      placeholder="Tell your story..."
      required
    ></textarea>

    <button type="submit" class="btn btn-dark">
      Publish
    </button>
  </form>

